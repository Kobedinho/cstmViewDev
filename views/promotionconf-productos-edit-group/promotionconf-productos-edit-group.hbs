<div class="form-horizontal">
    <div class="row-fluid control-group" >
        <a class="btn hidden" name="guardar-grupo">{{str 'LBL_GUARDAR_GRUPO'}}</a>
        <a class="btn hidden" name="clear-paste">{{str 'LBL_CLEAR_PASTE'}}</a>
    </div>
</div>
<div class="form-horizontal">
    <div class="row-fluid control-group" >
        {{#each meta.fields}}
            <div class="control-label span">
                <div class="control-label-background span{{labelSpan}}">
                    <label class="tright record-label" data-name="{{name}}">{{str vname ../model.module}}</label>
                </div>
            </div>
            <div class="controls span"
                 data-type="{{type}}" data-name="{{name}}">
                <span class="normal{{#if css}} {{css}}{{/if}} index{{index}}" data-fieldname="{{name}}" data-index="{{index}}">
                    {{field ../this model=../model template=../action}}
                </span>
            </div>
        {{/each}}
    </div>
</div>
<div class="row-fluid paste-container hidden" >
    <textarea name="paste"></textarea>
</div>
<div class="row-fluid sku-list-container hidden" ></div>
