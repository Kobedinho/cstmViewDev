<h3> Productos participantes </h3>
<div class="span12">
    <div class="4">
        <div class="form-group">
            <label class="control-label">Marca</label>
            <select class="form-control">
                <option value="">Todas</option>
                {{#eachOptions marcas_list}}
                <option value="{{{this.key}}}" >{{this.value}}</option>
                {{/eachOptions}}
            </select>
        </div>      
    </div>
    <div class="4">
        <div class="form-group">
            <label class="control-label">Familia</label>
            <select class="form-control">
                <option value="">Todas</option>
                {{#eachOptions familia_list}}
                <option value="{{{this.key}}}" >{{this.value}}</option>
                {{/eachOptions}}
            </select>
        </div>      
    </div>
    <div class="4">
        <div class="form-group">
            <span class="form-control btn btn-primary pull-left" ><i class="fa fa-search"></i></span>
        </div>      
    </div>
</div>